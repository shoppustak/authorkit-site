{
  "version": 2,
  "name": "authorkit-pro",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/bookshelf/keepalive",
      "schedule": "0 0 */6 * *"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/bookshelf/index.html",
      "has": [
        {
          "type": "host",
          "value": "bookshelf.authorkit.pro"
        }
      ]
    },
    {
      "source": "/browse",
      "destination": "/public/bookshelf/browse.html",
      "has": [
        {
          "type": "host",
          "value": "bookshelf.authorkit.pro"
        }
      ]
    }
  ]
}
